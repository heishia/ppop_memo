{
  "name": "ppop-memo",
  "version": "1.0.10",
  "type": "module",
  "description": "Desktop memo application with sticky notes, file association, and handwriting recognition",
  "main": "dist/apps/desktop/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:electron\" \"npm run dev:renderer\" \"npm run dev:start\"",
    "dev:electron": "tsc -w --project tsconfig.electron.json",
    "dev:renderer": "vite",
    "dev:start": "node scripts/dev-start.js",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "vite build",
    "build:electron": "tsc --project tsconfig.electron.json && node --eval \"import('fs').then(f=>f.writeFileSync('dist/package.json','{\\\"type\\\":\\\"commonjs\\\"}'))\"",
    "start": "electron .",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:all": "npm run build && electron-builder --win --mac",
    "clean": "rimraf dist release apps/desktop/renderer/dist",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "postinstall": "cross-env npm_config_build_from_source=false electron-builder install-app-deps"
  },
  "keywords": [
    "memo",
    "desktop",
    "electron",
    "notes"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.54.0",
    "rimraf": "^6.1.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "autoprefixer": "^10.4.16",
    "better-sqlite3": "^9.2.2",
    "electron-updater": "^6.7.3",
    "fabric": "^5.3.0",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.6",
    "tesseract.js": "^5.0.4"
  }
}
