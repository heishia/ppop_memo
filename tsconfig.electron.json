{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@packages/*": ["./packages/*"]
    }
  },
  "include": ["apps/desktop/main/**/*", "apps/desktop/preload/**/*"],
  "exclude": ["node_modules", "dist"]
}
